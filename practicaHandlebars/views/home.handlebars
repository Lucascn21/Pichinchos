<script>
    function buscar() {
        let url = "/paises?"
        let nombre = document.getElementById("nombre2").value;
        if (nombre) {
            url += `nombre=${nombre}`;
        }

        let codigo = document.getElementById("codigo2").value;
        if (codigo && nombre) url += `&codigo=${codigo}`;
        else if (codigo) url += `codigo=${codigo}`;
        location = url;
    }
</script>
